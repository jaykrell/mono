#!/usr/bin/perl

use warnings FATAL => 'all';

my $path = shift || die("missing file path on command line");

open(my $file, "<", $path) || die("unable to open $path");

my $contents = join("", <$file>);

my $uuid = `uuidgen` || die("unable to run uuidgen");
chomp($uuid);

$contents =~ s/MONO_CORLIB_UUID=([\S]+)/MONO_CORLIB_UUID=$uuid/;

open($file, ">", $path) || die("unable to open $path");

print($file $contents);
